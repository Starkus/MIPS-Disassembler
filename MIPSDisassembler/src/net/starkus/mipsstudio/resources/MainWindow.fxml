<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="700.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.starkus.mipsstudio.view.MainWindowController">
   <children>
      <VBox prefHeight="700.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem fx:id="openCmd" mnemonicParsing="false" text="Open" />
                        <MenuItem fx:id="closeCmd" mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <BorderPane prefHeight="700.0" prefWidth="800.0">
               <top>
                  <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <items>
                      <Button fx:id="refreshCmd" mnemonicParsing="false" text="Refresh" />
                        <HBox alignment="CENTER" spacing="4.0">
                           <children>
                              <Label text="Go to address:" />
                              <TextField fx:id="addressField" />
                              <Button fx:id="goButton" mnemonicParsing="false" text="Go" />
                           </children>
                        </HBox>
                    </items>
                  </ToolBar>
               </top>
               <center>
                  <TableView fx:id="codeTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <columns>
                      <TableColumn fx:id="addressColumn" prefWidth="120.0" text="Address" />
                      <TableColumn fx:id="hexColumn" prefWidth="120.0" text="Hex" />
                        <TableColumn fx:id="assemblyColumn" prefWidth="200.0" text="Assembly" />
                    </columns>
                  </TableView>
               </center>
            </BorderPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
